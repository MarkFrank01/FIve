<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/lay_reset_container"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:background="@color/app_main_background"
              android:orientation="vertical">

    <include
        android:id="@+id/ly_reset_bar"
        layout="@layout/activity_main_login_navigation_bar"/>

    <LinearLayout
        android:id="@+id/ll_reset_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_168PX"
        android:layout_marginLeft="@dimen/DIMEN_72PX"
        android:layout_marginRight="@dimen/DIMEN_72PX"
        android:layout_marginTop="@dimen/DIMEN_168PX"
        android:background="@drawable/bg_login_input_ok"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_reset_pwd_icon"
            android:layout_width="@dimen/DIMEN_72PX"
            android:layout_height="@dimen/DIMEN_72PX"
            android:layout_marginLeft="@dimen/DIMEN_42PX"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_login_password"
            tools:ignore="RtlHardcoded"/>

        <View
            android:layout_width="@dimen/DIMEN_1PX"
            android:layout_height="@dimen/DIMEN_72PX"
            android:layout_marginLeft="@dimen/DIMEN_42PX"
            android:background="@color/app_line_gray_bg"
            tools:ignore="RtlHardcoded"/>

        <EditText
            android:id="@+id/et_reset_account"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/DIMEN_48PX"
            android:layout_marginRight="@dimen/DIMEN_48PX"
            android:layout_weight="0.71"
            android:background="@null"
            android:hint="@string/reset_account"
            android:inputType="number"
            android:maxLines="1"
            android:minLines="1"
            android:maxLength="11"
            android:paddingLeft="@dimen/DIMEN_12PX"
            android:paddingRight="@dimen/DIMEN_12PX"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/app_hint_gray"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_size_48"/>

        <TextView
            android:id="@+id/tv_reset_sms_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/DIMEN_48PX"
            android:alpha="0.4"
            android:background="@drawable/bg_register_call_sms"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/DIMEN_12PX"
            android:paddingLeft="@dimen/DIMEN_18PX"
            android:paddingRight="@dimen/DIMEN_18PX"
            android:paddingTop="@dimen/DIMEN_12PX"
            android:text="@string/reset_msg"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_36"
            tools:ignore="RtlHardcoded"/>

        <ImageView
            android:id="@+id/iv_reset_pwd_del"
            android:layout_width="@dimen/DIMEN_60PX"
            android:layout_height="@dimen/DIMEN_60PX"
            android:layout_marginRight="@dimen/DIMEN_48PX"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:visibility="gone"
            app:srcCompat="@mipmap/ic_clear"
            tools:ignore="RtlHardcoded"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_register_sms_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_168PX"
        android:layout_marginLeft="@dimen/DIMEN_72PX"
        android:layout_marginRight="@dimen/DIMEN_72PX"
        android:layout_marginTop="@dimen/DIMEN_48PX"
        android:background="@drawable/bg_login_input_ok"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_register_auth_code_icon"
            android:layout_width="@dimen/DIMEN_72PX"
            android:layout_height="@dimen/DIMEN_72PX"
            android:layout_marginLeft="@dimen/DIMEN_42PX"
            android:layout_marginRight="@dimen/DIMEN_42PX"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_signup_sms"/>

        <View
            android:layout_width="@dimen/DIMEN_1PX"
            android:layout_height="@dimen/DIMEN_66PX"
            android:background="@color/app_line_gray_bg"/>

        <EditText
            android:id="@+id/et_reset_auth_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/DIMEN_48PX"
            android:layout_marginRight="@dimen/DIMEN_48PX"
            android:layout_weight="0.71"
            android:background="@null"
            android:hint="@string/reset_msg_hint"
            android:inputType="number"
            android:maxLines="1"
            android:minLines="1"
            android:paddingLeft="@dimen/DIMEN_12PX"
            android:paddingRight="@dimen/DIMEN_12PX"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/app_hint_gray"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_size_48"/>
    </LinearLayout>

    <Button
        android:id="@+id/bt_reset_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_156PX"
        android:layout_marginLeft="@dimen/DIMEN_72PX"
        android:layout_marginRight="@dimen/DIMEN_72PX"
        android:layout_marginTop="@dimen/DIMEN_192PX"
        android:background="@drawable/bg_login_submit_lock"
        android:elevation="0dp"
        android:text="@string/reset_submit"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_54"
        android:translationZ="0dp"
        android:enabled="false"
        android:clickable="false"
        tools:targetApi="lollipop"/>

</LinearLayout>