<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical">

    <!--Banner-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="138dp">

        <LinearLayout
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/indic1"
                android:background="@drawable/shape_msg_tuijian_circle_ff"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/indic2"
                android:layout_marginLeft="2dp"
                android:background="@drawable/shape_msg_tuijian_circle_f4"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/indic3"
                android:layout_marginLeft="2dp"
                android:background="@drawable/shape_msg_tuijian_circle_f4"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/indic4"
                android:layout_marginLeft="2dp"
                android:background="@drawable/shape_msg_tuijian_circle_f4"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/indic5"
                android:layout_marginLeft="2dp"
                android:background="@drawable/shape_msg_tuijian_circle_f4"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/header_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </FrameLayout>




    <!--主要的外贸入口-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:weightSum="2">

        <!--主粮 零食 日用品 兑换专区-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/zhuliang"/>

            <ImageView
                android:adjustViewBounds="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/zhuliang"/>

            <ImageView
                android:adjustViewBounds="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/zhuliang"/>

            <ImageView
                android:adjustViewBounds="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/zhuliang"/>


        </LinearLayout>

        <!--医疗 保健 玩具 领券中心-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/zhuliang"/>

            <ImageView
                android:adjustViewBounds="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/zhuliang"/>

            <ImageView
                android:adjustViewBounds="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/zhuliang"/>

            <ImageView
                android:adjustViewBounds="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/zhuliang"/>


        </LinearLayout>

    </LinearLayout>

    <!--更多-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite">

        <!--倒计时时间-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="品牌兼职"
                android:textColor="#464646"
                android:textSize="12sp"/>

        </LinearLayout>

        <!--拼团   更多-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="11dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看更多"
                android:textColor="#999999"
                android:textSize="12sp"/>

            <ImageView
                android:layout_width="5dp"
                android:layout_height="9dp"
                android:layout_marginLeft="4dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_point_newpaget"/>
        </LinearLayout>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/header_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"/>



</LinearLayout>
